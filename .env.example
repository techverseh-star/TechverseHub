# ───────────────────────────────────────────────
#  SUPABASE CONFIGURATION
# ───────────────────────────────────────────────
# Public URL for Supabase project
NEXT_PUBLIC_SUPABASE_URL=

# Public Anon Key (safe for frontend use)
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Service role key (DO NOT SHARE — backend only)
SUPABASE_SERVICE_ROLE_KEY=

# ───────────────────────────────────────────────
#  APPLICATION URLS
# ───────────────────────────────────────────────
# Production URL of your app
NEXT_PUBLIC_APP_URL=

# Base URL for API routes (same as above typically)
BASE_URL=

# ───────────────────────────────────────────────
#  EMAIL (SMTP) SETTINGS
# ───────────────────────────────────────────────
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# Token expiry duration in minutes for password reset
RESET_TOKEN_EXPIRY_MINUTES=10

# ───────────────────────────────────────────────
#  AI PROVIDERS
# ───────────────────────────────────────────────
# Groq LLM API Key
GROQ_API_KEY=

# Gemini API Key
GEMINI_API_KEY=
